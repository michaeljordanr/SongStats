<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:id="@+id/ll_container"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding_8"
    android:paddingStart="@dimen/default_padding_16"
    android:paddingEnd="@dimen/default_padding_16"
    android:paddingTop="@dimen/default_padding_8">

    <TextView
        android:id="@+id/tv_short_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="0.9"
        android:ellipsize="end"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Twenty One Pilots" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.1"
        android:textAlignment="textEnd"
        android:textColor="@color/text_color"
        tools:text="99" />

</LinearLayout>